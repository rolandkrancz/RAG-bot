# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to git (it's in .gitignore)

resource_group_name = "rg-rag-bot-sbx"
location            = "westeurope"
app_name            = "rag-bot-app"

# Container image published to any public registry
container_image = "ghcr.io/your-org/rag-bot:latest"
container_port  = 8000

# Set these to pull from a private GHCR repo (token needs `read:packages`)
registry_server   = "ghcr.io"
registry_username = "your-gh-username"
registry_password = "ghp_yourPersonalAccessToken"

# Only set this when you want the secret injected
openai_api_key = ""

environment_variables = {
  APP_ENV = "sandbox"
}

min_replicas = 0
max_replicas = 1

tags = {
  Environment = "Sandbox"
  Project     = "RAG-Bot"
  Owner       = "YourName"
  ManagedBy   = "Terraform"
}
